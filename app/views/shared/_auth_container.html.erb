<div class="min-h-screen bg-gradient-to-br from-slate-50 to-gray-100 flex items-center justify-center py-8">
  <div class="w-full max-w-2xl bg-white rounded-xl shadow-lg">
    <!-- Navigation -->
    <nav class="px-8 py-6">
      <div class="flex items-center justify-between">
        <%= link_to root_path, class: "text-slate-800 text-2xl font-bold hover:text-slate-700 transition duration-300" do %>
          yata
        <% end %>
      </div>
    </nav>

    <!-- Main Content -->
    <div class="px-8 py-12">
      <%= yield %>
    </div>

    <!-- Footer -->
    <footer class="bg-slate-800 text-white px-8 py-6 border-t">
      <div class="text-center text-sm text-slate-400">
        <p>&copy; <%= Date.current.year %> yata. Keep it simple.</p>
      </div>
    </footer>
  </div>
</div> 