<!-- app/views/pages/index.html.erb -->
<div class="min-h-screen bg-gradient-to-br from-slate-50 to-gray-100">
  <!-- Navigation -->
  <nav class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <div class="flex items-center">
        <%= link_to root_path, class: "text-slate-800 text-2xl font-bold hover:text-slate-700 transition duration-300" do %>
          yata
        <% end %>
      </div>
      <div>
        <% if user_signed_in? %>
          <%= button_to "Sign Out", destroy_user_session_path, 
              method: :delete, 
              class: "px-4 py-2 text-sm font-medium text-white bg-slate-800 rounded-lg hover:bg-slate-700 transition duration-300" %>
        <% else %>
          <%= link_to "Sign In", new_user_session_path, 
              class: "px-4 py-2 text-sm font-medium text-slate-600 hover:text-slate-800 transition duration-300" %>
          <%= link_to "Get Started", new_user_registration_path, 
              class: "ml-4 px-4 py-2 text-sm font-medium text-white bg-slate-800 rounded-lg hover:bg-slate-700 transition duration-300" %>
        <% end %>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <div class="container mx-auto px-6 py-16 text-center">
    <h1 class="text-5xl font-bold text-slate-800 mb-4">yata</h1>
    <p class="text-2xl text-slate-600 mb-2">yet another todo app</p>
    <p class="text-xl text-slate-500 mb-8">Simple. Fast. Just works.</p>
    
    <div class="mt-12 mb-16">
      <div class="bg-white p-6 rounded-lg shadow-lg max-w-md mx-auto">
        <div class="space-y-3">
          <div class="flex items-center">
            <input type="checkbox" checked class="w-5 h-5 text-slate-800 rounded border-gray-300" disabled>
            <span class="ml-3 text-gray-500 line-through">Create a todo app</span>
          </div>
          <div class="flex items-center">
            <input type="checkbox" class="w-5 h-5 text-slate-800 rounded border-gray-300" disabled>
            <span class="ml-3 text-slate-800">Sign up for yata</span>
          </div>
          <div class="flex items-center">
            <input type="checkbox" class="w-5 h-5 text-slate-800 rounded border-gray-300" disabled>
            <span class="ml-3 text-slate-800">Get things done</span>
          </div>
        </div>
      </div>
    </div>

    <%= link_to "Start Now - Free", new_user_registration_path, class: "px-8 py-3 text-lg font-medium text-white bg-slate-800 rounded-lg hover:bg-slate-700 transition duration-300" %>
  </div>

  <!-- Features Section -->
  <div class="bg-white py-16">
    <div class="container mx-auto px-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <h3 class="text-lg font-semibold text-slate-800 mb-2">Simple</h3>
          <p class="text-slate-600">No bells and whistles. Just todos.</p>
        </div>
        <div class="text-center">
          <h3 class="text-lg font-semibold text-slate-800 mb-2">Fast</h3>
          <p class="text-slate-600">Blazing fast. No waiting around.</p>
        </div>
        <div class="text-center">
          <h3 class="text-lg font-semibold text-slate-800 mb-2">Reliable</h3>
          <p class="text-slate-600">Your todos, always available.</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-slate-800 text-white py-8">
    <div class="container mx-auto px-6">
      <div class="text-center text-slate-400">
        <p>&copy; <%= Date.current.year %> yata. Keep it simple.</p>
      </div>
    </div>
  </footer>
</div>
