<%= render layout: 'shared/auth_container' do %>
  <div class="max-w-md mx-auto">
    <h2 class="text-3xl font-bold text-slate-800 mb-6 text-center">Sign In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <% if flash[:alert] %>
        <div class="mb-4 p-4 rounded-md bg-red-50 text-red-500"><%= flash[:alert] %></div>
      <% end %>

      <div class="mb-6">
        <%= f.label :email, class: "block text-sm font-medium text-slate-700 mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-slate-500" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, class: "block text-sm font-medium text-slate-700 mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-slate-500" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-6">
          <%= f.check_box :remember_me, class: "rounded border-slate-300 text-slate-800 focus:ring-slate-500" %>
          <%= f.label :remember_me, class: "ml-2 text-sm text-slate-600" %>
        </div>
      <% end %>

      <%= f.submit "Sign in", class: "w-full py-3 px-4 text-white bg-slate-800 hover:bg-slate-700 rounded-lg transition duration-300" %>
    <% end %>

    <div class="mt-6 text-center text-sm text-slate-600">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
