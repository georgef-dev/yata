<%= render layout: 'shared/auth_container' do %>
  <div class="max-w-md mx-auto">
    <h2 class="text-3xl font-bold text-slate-800 mb-6 text-center">Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-6">
        <%= f.label :email, class: "block text-sm font-medium text-slate-700 mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-slate-500" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, class: "block text-sm font-medium text-slate-700 mb-2" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-slate-500" %>
        <% if @minimum_password_length %>
          <p class="mt-1 text-xs text-slate-500">Minimum <%= @minimum_password_length %> characters</p>
        <% end %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-slate-700 mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-slate-500" %>
      </div>

      <%= f.submit "Sign up", class: "w-full py-3 px-4 text-white bg-slate-800 hover:bg-slate-700 rounded-lg transition duration-300" %>
    <% end %>

    <div class="mt-6 text-center text-sm text-slate-600">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>

  
